<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jp.ne.docomo.smt.dev.ddssampleapp"
    android:versionCode="1"
    android:versionName="1.0.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTING" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="jp.ne.docomo.smt.dev.mrconcierge.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="jp.ne.docomo.smt.dev.mrconcierge.AppInfomationActivity"
            android:exported="false"
            android:label="@string/label_application_info"
            android:screenOrientation="portrait" />
        <activity
            android:name="jp.ne.docomo.smt.dev.mrconcierge.AppSettingsActivity"
            android:exported="false"
            android:label="@string/label_application_settings"
            android:screenOrientation="portrait" />
    </application>

</manifest>